{ 
	"builders": [
		{
			"type": "vmware-iso",
      "iso_url": "http://mirrors-uk.go-parts.com/centos/6.6/isos/x86_64/CentOS-6.6-x86_64-minimal.iso",
      "iso_checksum": "eb3c8be6ab668e6d83a118323a789e6c",
      "iso_checksum_type": "md5",
      "headless": false,
      "http_directory": "http",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "guest_os_type": "centos-64",
      "output_directory": "packer-centos-6.6-x86_64-vmware",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "type": "vmware-iso",
      "vm_name": "packer-centos-6.6-x86_64",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "numvcpus": "2","ethernet0.networkName": "VM Network",
        "memsize": "2048",
        "ide0:0.fileName": "disk.vmdk",
        "ide0:0.present": "TRUE",
        "ide0:0.redo": "",
        "scsi0:0.present": "FALSE"
      },
      "tools_upload_flavor": "linux"

		}
	],
  "provisioners": [
    {
      "type": "file",
      "source": "scripts/vmware.repo",
      "destination": "/tmp/vmware-tools.repo"
    },
    {
      "type": "shell",
      "scripts": [
              "scripts/init.sh",
              "scripts/vmware.sh",
              "scripts/vagrant.sh",
              "scripts/cleanup.sh",
              "scripts/zerodisk.sh"
      ],
       "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'"
    }
      
  ],
  "post-processors": [
    {
      "output": "builds/centos-6.6-x86_64.box",
      "type": "vagrant"
    }
  ]
	
}